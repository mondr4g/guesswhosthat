    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_1vs1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="28dp"
        android:text="1 vs 1"
        android:backgroundTint="@color/primary"
        android:elevation="50dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername"
        tools:layout_editor_absoluteX="49dp" />

    <Button
        android:id="@+id/btn_playFriends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="12dp"
        android:text="Play with friends"
        android:backgroundTint="@color/secondary"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:elevation="50dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_1vs1"
        tools:layout_editor_absoluteX="49dp" />

    <Button
        android:id="@+id/btn_1vsia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:text="1 vs A.I."
        android:textStyle="bold"
        android:backgroundTint="@color/blue"
        android:elevation="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_playFriends"
        app:layout_constraintVertical_bias="0.194"
        tools:layout_editor_absoluteX="50dp" />


    <Button
        android:id="@+id/btnSocketConn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSocketDisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconectar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>